@model IEnumerable<ShiftON.Data.Schedule>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        body{
            background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), url("../Pictures/background2.jpg") center / cover no-repeat fixed;
        }
        tbody{
            display: flex;
            justify-content: center;
            flex-direction: row;
        }
        .colum{
            display: flex;
            justify-content: center;
            flex-direction: column;
            max-width: 20px;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center; color: #29aae2;">Графици</h1>

    <p>
        <a asp-action="Create" style="color: #29aae2; font-weight: 500; text-decoration: none;">Създай нов график</a>
    </p>
    <table class="table" style="border: solid #29aae2;">
@*        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfWeek)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers)
                </th>
                <th></th>
            </tr>
        </thead>*@
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="colum">
                        @Html.DisplayFor(modelItem => item.DayOfWeek)
                    </td>
                    <td class="colum">
                        @Html.DisplayFor(modelItem => item.Customers)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
